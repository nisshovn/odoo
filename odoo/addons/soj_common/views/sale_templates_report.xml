<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit quotation report (from module sale) -->
    <template id="report_quotation_inherit_commodity" inherit_id="sale.report_saleorder_document">
        <xpath expr="//table[@class='table table-sm o_main_table']//thead//tr//th[1]" position="after">
            <th>Commodity Code</th>
        </xpath>
        <xpath expr="//tbody[@class='sale_tbody']//tr//td[1]" position="after">
            <td><span t-field="line.product_cmdtycd"/></td>
	    </xpath>
    </template>

    <template id="sale_order_portal_content_inherit_commodity" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//table[@id='sales_order_table']//thead//tr//th[1]" position="after">
            <th>Commodity Code</th>
        </xpath>
        <xpath expr="//table[@id='sales_order_table']//tbody[@class='sale_tbody']//tr//td[1]" position="after">
            <td><span t-field="line.product_cmdtycd"/></td>
	    </xpath>
    </template>
</odoo>